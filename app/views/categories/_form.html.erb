<%= form_with model: category, local: true, class: "space-y-4 max-w-sm" do |f| %>
  <div>
    <%= f.label :name, class: label_classes %>
    <%= f.text_field :name, class: input_classes %>
  </div>

  <div class="flex justify-end">
    <%= f.submit category.new_record? ? "Create" : "Update", class: link_primary_classes %>
  </div>
<% end %>
