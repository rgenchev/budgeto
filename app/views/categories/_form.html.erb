<!-- app/views/categories/_form.html.erb -->
<%= form_with model: @category, local: true, class: "space-y-4 max-w-sm" do |f| %>

  <% if @category.errors.any? %>
    <div class="bg-red-100 text-red-800 p-3 rounded mb-2">
      <ul class="list-disc pl-5">
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm text-gray-500" %>
    <%= f.text_field :name,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-black focus:ring-black" %>
  </div>

  <%= f.submit "Save",
        class: "rounded-md bg-black px-4 py-2 text-white hover:bg-gray-800" %>

<% end %>
