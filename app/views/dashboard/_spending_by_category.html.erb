<div class="rounded-lg bg-white shadow-sm mb-5">
  <div class="border-b border-gray-300 px-6 py-4 font-medium">
    Spending by category
  </div>

  <% if by_category.present? %>
  <ul class="divide-y">
    <% by_category.each do |name, sum| %>
      <li class="flex justify-between px-6 py-3 border-b border-gray-100">
        <span><%= name %></span>
        <span class="font-medium"><%= number_to_eur(sum) %></span>
      </li>
    <% end %>
  </ul>
  <% else %>
    <div class="px-6 py-8 text-center text-sm text-gray-500">
      No expenses yet.
    </div>
  <% end %>
</div>
