        <div>
          <div class="font-medium"><%= e.category.name %></div>
          <div class="text-sm text-gray-500">
            <%= e.date.strftime("%b %d, %Y") %>
            <%= e.note.present? ? "â€” #{e.note}" : "" %>
          </div>
