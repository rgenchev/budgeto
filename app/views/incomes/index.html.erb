<!-- Header -->
<%= render "shared/title", title: "Income" %>

<!-- Month navigation -->
<%= render "shared/month_nav", current_date: @current_date %>

<!-- Quick Add Form -->
<%= render "quick_add_form", income: @income %>

<div class="rounded-lg bg-white shadow-sm">
  <div class="border-b border-gray-300 px-6 py-4 font-medium">
    All Income
  </div>

  <% if @incomes.any? %>
    <ul class="divide-y">
      <% @incomes.each do |i| %>
        <li class="flex items-center justify-between px-6 py-3 border-b border-gray-100">
          <div>
            <div class="text-sm text-gray-500">
              <%= i.date.strftime("%b %d, %Y") %>
              <%= i.note.present? ? "â€” #{i.note}" : "" %>
            </div>
          </div>

          <div class="font-semibold">
            <%= number_to_eur(i.amount) %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="px-6 py-8 text-center text-sm text-gray-500">
      No income yet.
    </div>
  <% end %>
</div>
