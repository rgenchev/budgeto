<% if flash[:alert] %>
  <div class="mb-4 rounded-lg bg-yellow-100 border border-yellow-300 text-yellow-800 px-4 py-3 text-sm shadow-sm">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="mb-4 rounded-lg bg-green-100 border border-green-300 text-green-800 px-4 py-3 text-sm shadow-sm">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="mb-4 rounded-lg bg-red-100 border border-red-300 text-red-800 px-4 py-3 text-sm shadow-sm">
    <%= flash[:error] %>
  </div>
<% end %>
